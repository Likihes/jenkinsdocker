pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage("git checkout"){
            steps{
              checkout scmGit(branches: [[name: '*/master']], 
              userRemoteConfigs: [[url: 'https://github.com/Likihes/java-web-app-docker.git']])
            }
        }
        stage("Test_Parallel"){
            parallel{
                stage("junit_test"){
                    steps{
                        sh 'mvn clean test'
                    }
                }

                stage("integration_test"){
                    steps{
                        sh 'mvn clean test'
                    }
                }     

            }
        }
        
    }
    
}

